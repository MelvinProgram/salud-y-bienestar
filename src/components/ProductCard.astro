---
// src/components/ProductCard.astro

// 1. Definici칩n de las Props (Propiedades que vienen del Frontmatter del .md)
interface Props {
  title: string;
  description: string;
  image: string; // Ruta de la imagen del producto
  amazonLink: string; // 춰El enlace de afiliado crucial!
  category: string;
  // Opcional: slug se usar칤a para enlazar a la rese침a completa, si la creas
  // slug?: string; 
}

const { title, description, image, amazonLink, category } = Astro.props;
---

<article class="product-card bg-white border border-gray-200 rounded-xl overflow-hidden shadow-lg hover:shadow-xl transition-shadow duration-300">
  
  <div class="image-container h-40 flex items-center justify-center p-4 bg-gray-50">
    <img 
      src={image} 
      alt={`Imagen del producto: ${title}`} 
      class="max-h-full max-w-full object-contain transition-transform duration-300 hover:scale-105"
      loading="lazy"
    />
  </div>

  <div class="content-body p-4">
    <span class="text-xs font-semibold uppercase text-teal-600 mb-1 block">
      {category.replace('-', ' ')}
    </span>
    
    <h3 class="text-lg font-bold text-gray-900 leading-snug mb-2">
      {title}
    </h3>

    <p class="text-sm text-gray-500 mb-4 h-12 overflow-hidden">
      {description}
    </p>

    <p class="text-sm text-gray-500 mb-4">
      {category}
    </p>

    <a 
      href={amazonLink} 
      target="_blank" 
      rel="noopener noreferrer" 
      class="amazon-button w-full flex items-center justify-center px-4 py-2 text-white font-bold rounded-lg transition-colors duration-200"
    >
      游 Comprar en Amazon
    </a>
  </div>
</article>

<style>
  /* Estilos para el bot칩n de afiliado de Amazon */
  .amazon-button {
    background-color: #ff9900; /* Color principal de Amazon (Naranja) */
  }
  .amazon-button:hover {
    background-color: #e68a00; /* Naranja m치s oscuro al pasar el rat칩n */
  }
</style>